@model IEnumerable<muhaberat_evrak_yonetim.Entities.User>
@{
    ViewData["Title"] = "Departman Kullanıcıları";
    var department = ViewBag.Department as muhaberat_evrak_yonetim.Entities.Department;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-primary">
                <i class="fas fa-users mr-2"></i>@department?.DepartmentName - Kullanıcıları
            </h1>
            <p class="mb-0 text-muted">
                <i class="fas fa-sitemap mr-1"></i>@department?.Unit?.UnitName · 
                <i class="fas fa-code mr-1"></i>@department?.DepartmentCode
            </p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>Departmanlara Dön
            </a>
            <a asp-controller="User" asp-action="Create" class="btn btn-primary ml-2">
                <i class="fas fa-user-plus mr-2"></i>Yeni Kullanıcı
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
            <button type="button" class="close" data-bs-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-2"></i>@TempData["Error"]
            <button type="button" class="close" data-bs-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }

    <!-- Department Info Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-left-primary shadow-sm">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="department-icon-large">
                                <i class="fas fa-building"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="card-title mb-1">@department?.DepartmentName</h5>
                            <p class="card-text text-muted mb-1">
                                <i class="fas fa-sitemap mr-1"></i>@department?.Unit?.UnitName Birimi
                            </p>
                            @if (!string.IsNullOrEmpty(department?.Description))
                            {
                                <p class="card-text"><small class="text-muted">@department.Description</small></p>
                            }
                            @if (department?.HasFullAccess == true)
                            {
                                <span class="badge badge-warning">
                                    <i class="fas fa-crown mr-1"></i>Tam Erişim Yetkisi
                                </span>
                            }
                        </div>
                        <div class="col-auto">
                            <div class="text-right">
                                <h2 class="mb-0 text-primary">@Model.Count()</h2>
                                <small class="text-muted">Aktif Kullanıcı</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Kullanıcı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Farklı Rol
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Select(u => u.RoleId).Distinct().Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bu Ay Katılan
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(u => u.CreatedAt.Month == DateTime.Now.Month && u.CreatedAt.Year == DateTime.Now.Year)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-plus fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Yönetici Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(u => u.Role != null && (u.Role.RoleName.Contains("Yönetici") || u.Role.RoleName.Contains("Manager")))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users by Role -->
    @if (Model.Any())
    {
        var usersByRole = Model.GroupBy(u => u.Role?.RoleName ?? "Rol Atanmamış");
        
        <div class="row mb-4">
            @foreach (var roleGroup in usersByRole)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-user-tag mr-2"></i>@roleGroup.Key
                                <span class="badge badge-primary ml-2">@roleGroup.Count()</span>
                            </h6>
                        </div>
                        <div class="card-body">
                            @foreach (var user in roleGroup.OrderBy(u => u.FirstName))
                            {
                                <div class="d-flex align-items-center justify-content-between mb-3 p-2 bg-light rounded">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar mr-3">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@user.FirstName @user.LastName</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope mr-1"></i>@user.Email
                                            </small>
                                            <br>
                                            <small class="text-muted">
                                                <i class="fas fa-user mr-1"></i>@user.Username
                                            </small>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <div class="btn-group-vertical btn-group-sm" role="group">
                                            <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-outline-primary" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Users Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-table mr-2"></i>Kullanıcı Listesi
            </h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Kullanıcı Adı</th>
                                <th>E-posta</th>
                                <th>Rol</th>
                                <th>Katılma Tarihi</th>
                                <th>Son Güncelleme</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-avatar mr-2">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <strong>@user.FirstName @user.LastName</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <code class="bg-light p-1 rounded">@user.Username</code>
                                    </td>
                                    <td>
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope mr-1"></i>@user.Email
                                        </a>
                                    </td>
                                    <td>
                                        @if (user.Role != null)
                                        {
                                            <span class="badge badge-info">@user.Role.RoleName</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Rol Atanmamış</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>@user.UpdatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-outline-primary" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="MyDocuments" asp-route-userId="@user.Id" 
                                               class="btn btn-sm btn-outline-info" title="Evrakları">
                                                <i class="fas fa-file-alt"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="Statistics" asp-route-userId="@user.Id" 
                                               class="btn btn-sm btn-outline-success" title="İstatistikler">
                                                <i class="fas fa-chart-bar"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-600">Bu departmanda henüz kullanıcı bulunmuyor</h5>
                        <p class="text-muted mb-4">
                            @department?.DepartmentName departmanına yeni kullanıcılar ekleyerek başlayabilirsiniz.
                        </p>
                        <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-user-plus mr-2"></i>İlk Kullanıcıyı Ekle
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-bolt text-warning mr-3 fa-lg"></i>
                            <span class="font-weight-bold text-dark">Hızlı İşlemler</span>
                        </div>
                        <div class="btn-group" role="group">
                            <a asp-controller="User" asp-action="Create" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-user-plus mr-1"></i>Yeni Kullanıcı
                            </a>
                            <a asp-controller="User" asp-action="ByDepartment" asp-route-departmentId="@department?.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-filter mr-1"></i>Departman Görünümü
                            </a>
                            <a asp-action="Documents" asp-route-id="@department?.Id" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-file-alt mr-1"></i>Departman Evrakları
                            </a>
                            <a asp-action="Details" asp-route-id="@department?.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-info-circle mr-1"></i>Departman Detayları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .department-icon-large {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .user-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    .empty-state {
        padding: 2rem;
    }

    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }

    .card-title {
        font-weight: 600;
    }

    .btn-group-vertical .btn {
        margin-bottom: 2px;
    }

    .btn-group-vertical .btn:last-child {
        margin-bottom: 0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable if users exist
            @if (Model.Any())
            {
                <text>
                $('#usersTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    },
                    "order": [[ 0, "asc" ]],
                    "pageLength": 25,
                    "responsive": true,
                    "columnDefs": [
                        { "orderable": false, "targets": 6 } // Actions column
                    ]
                });
                </text>
            }

            // Add tooltips
            $('[title]').tooltip();

            // User role filtering
            $('.role-filter').on('click', function(e) {
                e.preventDefault();
                var role = $(this).data('role');
                
                if (role === 'all') {
                    $('.user-row').show();
                } else {
                    $('.user-row').hide();
                    $('.user-row[data-role="' + role + '"]').show();
                }
                
                // Update active state
                $('.role-filter').removeClass('active');
                $(this).addClass('active');
            });

            // Email copy functionality
            $('.copy-email').on('click', function(e) {
                e.preventDefault();
                var email = $(this).data('email');
                
                if (navigator.clipboard) {
                    navigator.clipboard.writeText(email).then(function() {
                        // Show tooltip or notification
                        $(e.target).tooltip('dispose').tooltip({
                            title: 'E-posta kopyalandı!',
                            trigger: 'manual'
                        }).tooltip('show');
                        
                        setTimeout(function() {
                            $(e.target).tooltip('hide');
                        }, 2000);
                    });
                }
            });
        });
    </script>
}