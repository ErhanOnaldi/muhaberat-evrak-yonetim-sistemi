@model muhaberat_evrak_yonetim.Entities.Document
@using muhaberat_evrak_yonetim.Enums

@{
    ViewData["Title"] = "Evrak Detayları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-file-alt mr-2"></i>@Model.DocumentNumber - @Model.Title
        </h1>
        <div>
            @if (Model.Status == DocumentStatus.SENT.ToString() && (ViewBag.CurrentUserId == Model.ReceiverUserId || ViewBag.CurrentUserDepartmentId == Model.ReceiverDepartmentId || ViewBag.HasFullAccess == true))
            {
                <button type="button" class="btn btn-success btn-sm mr-2" data-bs-toggle="modal" data-bs-target="#receiptModal">
                    <i class="fas fa-check mr-1"></i>Teslim Al
                </button>
            }
            
            @if ((ViewBag.CurrentUserId == Model.CreatedBy || ViewBag.HasFullAccess == true) && Model.Status == DocumentStatus.DRAFT.ToString())
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm mr-2">
                    <i class="fas fa-edit mr-1"></i>Düzenle
                </a>
            }
            
            <a asp-action="History" asp-route-id="@Model.Id" class="btn btn-info btn-sm mr-2">
                <i class="fas fa-history mr-1"></i>Geçmiş
            </a>
            
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left mr-1"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Document Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Evrak Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Evrak No:</strong> @Model.DocumentNumber</p>
                            <p><strong>Başlık:</strong> @Model.Title</p>
                            <p><strong>Evrak Türü:</strong> @(Model.DocumentType?.TypeName ?? "Belirtilmemiş")</p>
                            <p><strong>Açıklama:</strong> @(Model.Description ?? "Açıklama yok")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Müşteri ID:</strong> @(Model.CustomerId ?? "Belirtilmemiş")</p>
                            <p><strong>Müşteri Adı:</strong> @(Model.CustomerName ?? "Belirtilmemiş")</p>
                            <p><strong>Fiziksel Evrak Türü:</strong> 
                                @{
                                    var physicalType = Model.PhysicalDocumentType switch
                                    {
                                        "ORIGINAL" => "Orijinal",
                                        "COPY" => "Kopya", 
                                        "NOTARIZED" => "Noterli",
                                        _ => Model.PhysicalDocumentType
                                    };
                                }
                                @physicalType
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sender/Receiver Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-exchange-alt mr-2"></i>Gönderen / Alıcı Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-success">Gönderen</h6>
                            <p><strong>Kullanıcı:</strong> @(Model.SenderUser?.FirstName + " " + Model.SenderUser?.LastName)</p>
                            <p><strong>Departman:</strong> @(Model.SenderDepartment?.DepartmentName)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-info">Alıcı</h6>
                            @if (Model.ReceiverUser != null)
                            {
                                <p><strong>Kullanıcı:</strong> @(Model.ReceiverUser.FirstName + " " + Model.ReceiverUser.LastName)</p>
                            }
                            @if (Model.ReceiverDepartment != null)
                            {
                                <p><strong>Departman:</strong> @Model.ReceiverDepartment.DepartmentName</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cargo Information (if assigned) -->
            @if (Model.Cargo != null)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-warning">
                            <i class="fas fa-truck mr-2"></i>Kargo Bilgileri
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Takip Numarası:</strong> @Model.Cargo.CargoTrackingNumber</p>
                                <p><strong>Kargo Şirketi:</strong> @(Model.Cargo.CargoCompany ?? "Belirtilmemiş")</p>
                                <p><strong>Paket Türü:</strong> 
                                    @{
                                        var packageType = Model.Cargo.PackageType switch
                                        {
                                            "ENVELOPE" => "Zarf",
                                            "SMALL_PACKAGE" => "Küçük Paket",
                                            "LARGE_PACKAGE" => "Büyük Paket", 
                                            "SPECIAL" => "Özel",
                                            _ => Model.Cargo.PackageType
                                        };
                                    }
                                    @packageType
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Durum:</strong> 
                                    @{
                                        var cargoStatusClass = Model.Cargo.DeliveryStatus switch
                                        {
                                            "PREPARING" => "badge-warning",
                                            "SHIPPED" => "badge-info", 
                                            "IN_TRANSIT" => "badge-primary",
                                            "DELIVERED" => "badge-success",
                                            "RETURNED" => "badge-danger",
                                            _ => "badge-secondary"
                                        };
                                        var cargoStatusText = Model.Cargo.DeliveryStatus switch
                                        {
                                            "PREPARING" => "Hazırlanıyor",
                                            "SHIPPED" => "Kargoya Verildi",
                                            "IN_TRANSIT" => "Yolda", 
                                            "DELIVERED" => "Teslim Edildi",
                                            "RETURNED" => "İade Edildi",
                                            _ => Model.Cargo.DeliveryStatus
                                        };
                                    }
                                    <span class="badge @cargoStatusClass">@cargoStatusText</span>
                                </p>
                                @if (Model.Cargo.ShippingDate.HasValue)
                                {
                                    <p><strong>Gönderim Tarihi:</strong> @Model.Cargo.ShippingDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                }
                                @if (Model.Cargo.DeliveryDate.HasValue)
                                {
                                    <p><strong>Teslimat Tarihi:</strong> @Model.Cargo.DeliveryDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                                }
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <p><strong>Gönderim Adresi:</strong> @Model.Cargo.ShippingAddress</p>
                                <p><strong>Teslimat Adresi:</strong> @Model.Cargo.DeliveryAddress</p>
                                @if (!string.IsNullOrEmpty(Model.Cargo.DeliveryNotes))
                                {
                                    <p><strong>Teslimat Notları:</strong> @Model.Cargo.DeliveryNotes</p>
                                }
                            </div>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Cargo" asp-action="Details" asp-route-id="@Model.Cargo.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-truck"></i> Kargo Detayları
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Durum Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <p><strong>Evrak Durumu:</strong>
                        @{
                            var statusClass = Model.Status switch
                            {
                                "DRAFT" => "badge-secondary",
                                "SENT" => "badge-warning", 
                                "DELIVERED" => "badge-info",
                                "RECEIVED" => "badge-success",
                                "CANCELLED" => "badge-danger",
                                _ => "badge-secondary"
                            };
                            var statusText = Model.Status switch
                            {
                                "DRAFT" => "Taslak",
                                "SENT" => "Gönderildi",
                                "DELIVERED" => "Teslim Edildi", 
                                "RECEIVED" => "Teslim Alındı",
                                "CANCELLED" => "İptal Edildi",
                                _ => Model.Status
                            };
                        }
                        <span class="badge @statusClass">@statusText</span>
                    </p>
                    <p><strong>Oluşturulma:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                    <p><strong>Oluşturan:</strong> @(Model.CreatedByUser?.FirstName + " " + Model.CreatedByUser?.LastName)</p>
                    @if (Model.ReviewedByUser != null)
                    {
                        <p><strong>İncelenen:</strong> @Model.ReviewDate?.ToString("dd.MM.yyyy HH:mm")</p>
                        <p><strong>İnceleyen:</strong> @(Model.ReviewedByUser.FirstName + " " + Model.ReviewedByUser.LastName)</p>
                    }
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-cogs mr-2"></i>İşlemler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == DocumentStatus.DRAFT.ToString() && (ViewBag.CurrentUserId == Model.CreatedBy || ViewBag.HasFullAccess == true))
                        {
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#sendModal">
                                <i class="fas fa-paper-plane mr-1"></i>Gönder
                            </button>
                        }

                        @if (ViewBag.CurrentDepartmentName == "Muhaberat" || ViewBag.HasFullAccess == true)
                        {
                            @if (Model.CargoId == null)
                            {
                                <a asp-controller="Cargo" asp-action="Create" class="btn btn-info btn-sm">
                                    <i class="fas fa-plus mr-1"></i>Kargo Oluştur
                                </a>
                            }
                        }

                        <button type="button" class="btn btn-secondary btn-sm" onclick="window.print()">
                            <i class="fas fa-print mr-1"></i>Yazdır
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Send Modal -->
@if (Model.Status == DocumentStatus.DRAFT.ToString())
{
    <div class="modal fade" id="sendModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Send" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title">Evrak Gönder</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bu evrağı göndermek istediğinizden emin misiniz?</p>
                        <div class="form-group mb-3">
                            <label for="sendNotes">Gönderim Notları (Opsiyonel)</label>
                            <textarea name="sendNotes" id="sendNotes" class="form-control" rows="3" 
                                     placeholder="Gönderimle ilgili notlar..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane mr-1"></i>Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Receipt Modal -->
@if (Model.Status == DocumentStatus.SENT.ToString())
{
    <div class="modal fade" id="receiptModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Receive" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title">Evrak Teslim Al</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bu evrağı teslim almak istediğinizden emin misiniz?</p>
                        <div class="form-group mb-3">
                            <label for="receivedByName">Teslim Alan Kişi</label>
                            <input type="text" name="receivedByName" id="receivedByName" class="form-control" 
                                   value="@ViewBag.CurrentUserInfo" placeholder="Teslim alan kişinin adı">
                        </div>
                        <div class="form-group mb-3">
                            <label for="receiptNotes">Teslim Alma Notları (Opsiyonel)</label>
                            <textarea name="receiptNotes" id="receiptNotes" class="form-control" rows="3" 
                                     placeholder="Teslim almayla ilgili notlar..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check mr-1"></i>Teslim Al
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}