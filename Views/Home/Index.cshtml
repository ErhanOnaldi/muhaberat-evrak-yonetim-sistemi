@using muhaberat_evrak_yonetim.Entities
@using System.Collections.Generic
@{
    ViewData["Title"] = "Ana Sayfa - Dashboard";
    var stats = ViewBag.DashboardStats;
    var recentDocuments = (stats.RecentDocuments as List<Document>) ?? new List<Document>();
    
    var documentTypeUsage = (stats.DocumentTypeUsage as List<dynamic>) ?? new List<dynamic>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-tachometer-alt mr-2"></i>Muhaberat Evrak Yönetim Sistemi
            </h1>
            <p class="mb-0 text-muted">
                <i class="fas fa-calendar-alt mr-1"></i>@DateTime.Now.ToString("dd MMMM yyyy, dddd")
            </p>
        </div>
        <div>
            <a asp-controller="Document" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Yeni Evrak
            </a>
        </div>
    </div>

    <!-- Main Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Evrak
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalDocuments</div>
                            <div class="text-xs text-muted">Bu ay: @stats.TotalDocumentsThisMonth</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bekleyen Evraklar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.PendingDocuments</div>
                            <div class="progress progress-sm mt-2">
                                <div class="progress-bar bg-warning" style="width: @(stats.TotalDocuments > 0 ? (stats.PendingDocuments * 100 / stats.TotalDocuments) : 0)%"></div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Teslim Edilen
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.DeliveredDocuments</div>
                            <div class="progress progress-sm mt-2">
                                <div class="progress-bar bg-success" style="width: @(stats.TotalDocuments > 0 ? (stats.DeliveredDocuments * 100 / stats.TotalDocuments) : 0)%"></div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Yolda Olan Kargolar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.InTransitCargo</div>
                            <div class="text-xs text-muted">Teslim edilen: @stats.DeliveredCargo</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-truck fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Aktif Kullanıcı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Departman
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalDepartments</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Rol
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalRoles</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Evrak Türü
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalDocumentTypes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Documents -->
        <div class="col-xl-8 col-lg-7 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-file-alt mr-2"></i>Son Evraklar
                    </h6>
                    <a asp-controller="Document" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-list mr-1"></i>Tümünü Gör
                    </a>
                </div>
                <div class="card-body">
                    @if (recentDocuments.Any())
                    {
                        @foreach (var doc in recentDocuments)
                        {
                            <div class="d-flex align-items-center justify-content-between p-2 border-bottom">
                                <div class="d-flex align-items-center">
                                    <div class="document-icon mr-3">
                                        <i class="fas fa-file-alt"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 small font-weight-bold">@doc.Title</h6>
                                        <small class="text-muted">@doc.DocumentNumber</small>
                                        <br><small class="text-info">@doc.DocumentType?.TypeName</small>
                                    </div>
                                </div>
                                <div class="text-right">
                                    @switch (doc.Status)
                                    {
                                        case "DRAFT":
                                            <span class="badge badge-secondary badge-sm">Taslak</span>
                                            break;
                                        case "SENT":
                                            <span class="badge badge-primary badge-sm">Gönderildi</span>
                                            break;
                                        case "DELIVERED":
                                            <span class="badge badge-success badge-sm">Teslim Edildi</span>
                                            break;
                                        case "RECEIVED":
                                            <span class="badge badge-info badge-sm">Alındı</span>
                                            break;
                                        default:
                                            <span class="badge badge-light badge-sm">@doc.Status</span>
                                            break;
                                    }
                                    <br><small class="text-muted">@doc.CreatedDate.ToString("dd.MM.yyyy")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-file-alt fa-2x text-gray-300 mb-2"></i>
                            <p class="text-muted mb-0">Henüz evrak bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt mr-2"></i>Hızlı İşlemler
                    </h6>
                </div>
                <div class="card-body d-flex flex-column justify-content-between" style="min-height: 280px;">
                    <div class="d-grid gap-2">
                        <a asp-controller="Document" asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus mr-2"></i>Yeni Evrak Oluştur
                        </a>
                        <a asp-controller="Document" asp-action="Index" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list mr-2"></i>Tüm Evrakları Görüntüle
                        </a>
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-users mr-2"></i>Kullanıcı Yönetimi
                        </a>
                        <a asp-controller="Department" asp-action="Index" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-building mr-2"></i>Departman Yönetimi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

        
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie mr-2"></i>En Çok Kullanılan Evrak Türleri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="chart-pie pt-4 pb-2">
                                <canvas id="documentTypePieChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="mb-3">En Çok Kullanılan İlk 3 Evrak Türü</h6>
                            @if (documentTypeUsage.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var docType in documentTypeUsage.Take(3))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <span class="color-box me-2"></span>
                                                <div>
                                                    <strong>@docType.DocumentType.TypeName</strong>
                                                    <small class="text-muted d-block">@docType.DocumentCount adet</small>
                                                </div>
                                            </div>
                                            <a asp-controller="Document" asp-action="Create" asp-route-documentTypeId="@docType.DocumentType.Id" class="btn btn-sm btn-success">
                                                <i class="fas fa-plus me-1"></i>Yeni Oluştur
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="alert alert-info">Henüz evrak türü kullanımı bulunmamaktadır.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <!-- Document Status Chart -->
        <div class="col-xl-4 col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie mr-2"></i>Evrak Durumları
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="documentStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Departments Chart -->
        <div class="col-xl-4 col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-chart-bar mr-2"></i>En Aktif Departmanlar
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="topDepartmentsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delivery Success Chart -->
        <div class="col-xl-4 col-lg-12 mb-4">
            <div class="card shadow h-100">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-warning">
                        <i class="fas fa-trophy mr-2"></i>Teslim Başarı Oranı
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="deliverySuccessChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .progress-sm {
        height: 4px;
    }

    .document-icon {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    .department-icon-small {
        width: 30px;
        height: 30px;
        border-radius: 6px;
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }

    .doctype-icon-large {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        margin: 0 auto;
    }

    .doctype-icon-large.bg-warning {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
    }

    .d-grid {
        display: grid;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .badge-sm {
        font-size: 0.65em;
    }

    .chart-area {
        position: relative;
        height: 300px;
    }

    .chart-pie {
        position: relative;
        height: 300px;
        width: 100%;
    }

    .color-box {
        display: inline-block;
        width: 15px;
        height: 15px;
        border-radius: 3px;
        margin-right: 5px;
        vertical-align: middle;
    }
</style>

@functions {
    private string GetRandomColor()
    {
        var random = new Random();
        return $"rgb({random.Next(0, 256)}, {random.Next(0, 256)}, {random.Next(0, 256)})";
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            const rawData = @Html.Raw(Json.Serialize(stats));
            // alert("Lütfen tarayıcı konsolunu (F12) açın ve çıktıyı kopyalayıp bana gönderin.");
        });
    </script>
}


