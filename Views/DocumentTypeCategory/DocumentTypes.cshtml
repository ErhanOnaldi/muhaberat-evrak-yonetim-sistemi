@model IEnumerable<muhaberat_evrak_yonetim.Entities.DocumentType>

@{
    ViewData["Title"] = "Kategori Evrak Türleri";
    var category = ViewBag.Category as muhaberat_evrak_yonetim.Entities.DocumentTypeCategory;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-info">
                <i class="fas fa-file-alt mr-2"></i>@category.CategoryName - Evrak Türleri
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Kategoriler</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="Details" asp-route-id="@category.Id">@category.CategoryName</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Evrak Türleri</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-controller="DocumentType" asp-action="Create" asp-route-categoryId="@category.Id" class="btn btn-success btn-sm">
                <i class="fas fa-plus mr-1"></i>Yeni Evrak Türü
            </a>
            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">
                <i class="fas fa-info-circle mr-1"></i>Kategori Detayları
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left mr-1"></i>Kategoriler
            </a>
        </div>
    </div>

    <!-- Category Summary Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-left-info shadow">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="category-icon mr-3">
                                    <i class="fas fa-folder"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1 font-weight-bold">@category.CategoryName</h5>
                                    @if (!string.IsNullOrEmpty(category.CategoryCode))
                                    {
                                        <span class="badge badge-info mr-2">@category.CategoryCode</span>
                                    }
                                    <span class="badge badge-@(category.IsActive ? "success" : "danger")">
                                        <i class="fas fa-@(category.IsActive ? "check" : "times") mr-1"></i>
                                        @(category.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <p class="text-muted mb-0 mt-2">@category.Description</p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-right">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Bu Kategorideki Evrak Türü Sayısı
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Document Types Table -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-list mr-2"></i>Evrak Türleri Listesi
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="documentTypesTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Evrak Türü</th>
                                <th>Tür Kodu</th>
                                <th>Açıklama</th>
                                <th>Özellikler</th>
                                <th>Durum</th>
                                <th>Oluşturma</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var docType in Model)
                            {
                                <tr class="@(docType.IsActive ? "" : "table-secondary")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="document-type-icon mr-2">
                                                <i class="fas fa-file-alt"></i>
                                            </div>
                                            <strong>@docType.TypeName</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(docType.TypeCode))
                                        {
                                            <code class="bg-light p-1 rounded">@docType.TypeCode</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(docType.Description))
                                        {
                                            <span>@(docType.Description.Length > 40 ? docType.Description.Substring(0, 40) + "..." : docType.Description)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex flex-wrap">
                                            @if (docType.IsUrgent)
                                            {
                                                <span class="badge badge-warning mr-1 mb-1">
                                                    <i class="fas fa-exclamation-triangle mr-1"></i>Acil
                                                </span>
                                            }
                                            @if (docType.RequiresSignature)
                                            {
                                                <span class="badge badge-info mr-1 mb-1">
                                                    <i class="fas fa-signature mr-1"></i>İmza
                                                </span>
                                            }
                                            @if (!docType.IsUrgent && !docType.RequiresSignature)
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (docType.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check mr-1"></i>Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times mr-1"></i>Pasif
                                            </span>
                                        }
                                    </td>
                                    <td>@docType.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="DocumentType" asp-action="Details" asp-route-id="@docType.Id" 
                                               class="btn btn-sm btn-outline-primary" title="Detaylar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="DocumentType" asp-action="Edit" asp-route-id="@docType.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-file-alt fa-4x text-gray-300"></i>
                </div>
                <h4 class="text-gray-600 mb-3">Henüz Evrak Türü Yok</h4>
                <p class="text-muted mb-4">
                    Bu kategoride henüz hiç evrak türü bulunmuyor. 
                    İlk evrak türünü oluşturmak için aşağıdaki butonu kullanabilirsiniz.
                </p>
                <a asp-controller="DocumentType" asp-action="Create" asp-route-categoryId="@category.Id" 
                   class="btn btn-success">
                    <i class="fas fa-plus mr-2"></i>İlk Evrak Türünü Oluştur
                </a>
            </div>
        </div>
    }
</div>

<style>
    .category-icon {
        width: 45px;
        height: 45px;
        border-radius: 8px;
        background: linear-gradient(135deg, #36b9cc 0%, #258391 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
    }
    
    .document-type-icon {
        width: 30px;
        height: 30px;
        border-radius: 6px;
        background: linear-gradient(135deg, #5a6c7d 0%, #4e5d6c 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }
    
    .border-left-info {
        border-left: .25rem solid #36b9cc !important;
    }

    .table-secondary {
        opacity: 0.7;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#documentTypesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "order": [[ 0, "asc" ]],
                "pageLength": 25,
                "responsive": true,
                "columnDefs": [
                    { "orderable": false, "targets": 6 } // Actions column
                ]
            });

            // Add tooltips
            $('[title]').tooltip();
        });
    </script>
}